extends layout

block content
  h1 Tervetuloa kokeilemaan puhutun ruotsin ylioppilaskokeen pilottia!
  p Puhunnoksiasi ei tallenneta, ei naamasikaan vaikka kamera onkin päällä. Valitse tehtäväsarja:


  // Wrapper
  #wrapper


      // USER LIST
      -if (showlogin) 
          h2 Login
              form#login(action="/login", method="post")
                  input#username(type="text", name="username", placeholder='Username')
                  br
                  input#password(type="password", name="password", placeholder='Password' value="codeme!" readonly)
                  br
                  input(type="submit", value="login")

      form#login1(action="/login", method="post")
          input#username(type="text", name="username", placeholder='Username' value="aa" hidden)
          input#password(type="password", name="password", placeholder='Password' value="codeme!" readonly hidden)
          input(type="submit", value="Aloita tehtäväsarja a")
      form#login2(action="/login", method="post")
          input#username(type="text", name="username", placeholder='Username' value="bb" hidden)
          input#password(type="password", name="password", placeholder='Password' value="codeme!" readonly hidden)
          input(type="submit", value="Aloita tehtäväsarja b")	  
      form#login3(action="/login", method="post")
          input#username(type="text", name="username", placeholder='Username' value="koe2" hidden)
          input#password(type="password", name="password", placeholder='Password' value="codeme!" readonly hidden)
          input(type="submit", value="Aloita tehtäväsarja c")                  
              

      // ADD USER
      -if (adding_user)
          h2 Add User
          #addUser
              fieldset
                  input#inputUserName(type='text', placeholder='Username')
                  input#inputUserEmail(type='text', placeholder='Email')
                  br
                  input#inputUserFullname(type='text', placeholder='Full Name')
                  input#inputUserAge(type='text', placeholder='Age')
                  br
                  input#inputUserLocation(type='text', placeholder='Location')
                  input#inputUserGender(type='text', placeholder='gender')
                  br
                  button#btnAddUser Add User
      // /ADD USER


      // UPLOAD PHOTO
      -if (uploading_photo)
          #uploadPhoto
              fieldset
                  input#inputFileName(type='file', placeholder='Photo file name')
                  br
                  button#btnUploadFile Upload File
  // /WRAPPER