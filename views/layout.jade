doctype html
html(ng-app)
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    block content
    -if(user && showuser)
        #user You are #{user}
    -if(error_message)
        div#error #{error_message}
    -if(success_message)
        div#success #{success_message}


    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js')
    script(type='text/javascript').
        var lang =!{JSON.stringify( ui_language )};
    script(type='text/javascript').
        var base_url =!{JSON.stringify( base_url )};
    block scripts